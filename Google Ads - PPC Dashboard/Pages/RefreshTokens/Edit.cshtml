@model Google_Ads___PPC_Dashboard.Pages.RefreshTokens.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RefreshToken</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RefreshToken.Id" />
            <div class="form-group">
                <label asp-for="RefreshToken.UserId" class="control-label"></label>
                <select asp-for="RefreshToken.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="RefreshToken.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefreshToken.Token" class="control-label"></label>
                <input asp-for="RefreshToken.Token" class="form-control" />
                <span asp-validation-for="RefreshToken.Token" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefreshToken.ExpiryDate" class="control-label"></label>
                <input asp-for="RefreshToken.ExpiryDate" class="form-control" />
                <span asp-validation-for="RefreshToken.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefreshToken.CreatedAt" class="control-label"></label>
                <input asp-for="RefreshToken.CreatedAt" class="form-control" />
                <span asp-validation-for="RefreshToken.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

