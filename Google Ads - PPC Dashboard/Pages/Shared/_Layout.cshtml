
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Våning 18</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Google_Ads___PPC_Dashboard.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Våning 18 Dashboard</a>

                <!-- User profile on the top-right -->
                <div class="dropdown ms-auto">
                    <a class="nav-link dropdown-toggle text-light" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <h4>@Context.Session.GetString("UserUsername")</h4>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                        <li>
                            @{
                                // Check if the user is authenticated by checking the session
                                if (string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                                {
                                // If no UserId is found in the session
                                    <a></a>
                                }
                                else
                                {
                                    <a asp-page="/ApplicationUsers/Details" asp-route-id="@Context.Session.GetString("UserId")">Profile</a>
                                }
                            }
                            </li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Login">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Add Bootstrap JS bundle -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
