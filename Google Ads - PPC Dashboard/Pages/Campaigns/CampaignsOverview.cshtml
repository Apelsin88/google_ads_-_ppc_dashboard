@{
    // Prepare labels (shared across all campaigns)
    var labels2 = Model.campaignPerformances.Select(cp => cp.Date.ToString("MMM dd")).Distinct().ToArray();

    // Prepare datasets for Clicks, Conversions, and Impressions for each campaign
    var datasetsClicks = Model.Campaigns.Select(campaign => new
    {
        label = campaign.Name,
        data = Model.campaignPerformances.Where(cp => cp.CampaignId == campaign.Id)
                                         .Select(cp => cp.Clicks)
                                         .ToArray(),
        borderColor = "#" + (campaign.Id * 123456).ToString("X6"),
        fill = false
    }).ToArray();

    var datasetsConversions = Model.Campaigns.Select(campaign => new
    {
        label = campaign.Name,
        data = Model.campaignPerformances.Where(cp => cp.CampaignId == campaign.Id)
                                         .Select(cp => cp.Conversions)
                                         .ToArray(),
        borderColor = "#" + (campaign.Id * 123456).ToString("X6"),
        fill = false
    }).ToArray();

    var datasetsImpressions = Model.Campaigns.Select(campaign => new
    {
        label = campaign.Name,
        data = Model.campaignPerformances.Where(cp => cp.CampaignId == campaign.Id)
                                         .Select(cp => cp.Impressions)
                                         .ToArray(),
        borderColor = "#" + (campaign.Id * 123456).ToString("X6"),
        fill = false
    }).ToArray();
}

<script>
    var ctx2 = document.getElementById('myLineChart2').getContext('2d');

    // Initial chart setup with Clicks data by default
    var chartData = @Html.Raw(Json.Serialize(datasetsClicks)); // Default dataset is Clicks

    var myLineChart2 = new Chart(ctx2, {
        type: 'line',
        data: {
            labels: @Html.Raw(Json.Serialize(labels2)),  // Pass labels
            datasets: chartData // Datasets based on default data (Clicks)
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });

    // Function to get datasets based on the key
    function getDataByKey(key) {
        switch (key) {
            case 'Clicks':
                return @Html.Raw(Json.Serialize(datasetsClicks));
            case 'Conversions':
                return @Html.Raw(Json.Serialize(datasetsConversions));
            case 'Impressions':
                return @Html.Raw(Json.Serialize(datasetsImpressions));
            default:
                return @Html.Raw(Json.Serialize(datasetsClicks)); // Default to Clicks
        }
    }

    // Listen for radio button changes
    document.querySelectorAll('input[name="dataOption"]').forEach(function (radio) {
        radio.addEventListener('change', function (event) {
            var chartDataKey = event.target.value; // Get selected data type (Clicks, Conversions, Impressions)
            var updatedData = getDataByKey(chartDataKey); // Fetch updated datasets

            // Update the chart with new data
            myLineChart2.data.datasets = updatedData;
            myLineChart2.update();
        });
    });
</script>
