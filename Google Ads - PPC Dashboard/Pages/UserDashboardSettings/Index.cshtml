@page
@model Google_Ads___PPC_Dashboard.Pages.UserDashboardSettings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserDashboardSetting[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDashboardSetting[0].WidgetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDashboardSetting[0].WidgetPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDashboardSetting[0].WidgetSettings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDashboardSetting[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDashboardSetting[0].UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserDashboardSetting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidgetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidgetPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WidgetSettings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
