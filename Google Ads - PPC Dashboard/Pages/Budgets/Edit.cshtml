@page
@model Google_Ads___PPC_Dashboard.Pages.Budgets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Budget</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Budget.BudgetId" />
            <div class="form-group">
                <label asp-for="Budget.CampaignId" class="control-label"></label>
                <select asp-for="Budget.CampaignId" class="form-control" asp-items="ViewBag.CampaignId"></select>
                <span asp-validation-for="Budget.CampaignId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.Amount" class="control-label"></label>
                <input asp-for="Budget.Amount" class="form-control" />
                <span asp-validation-for="Budget.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.Spend" class="control-label"></label>
                <input asp-for="Budget.Spend" class="form-control" />
                <span asp-validation-for="Budget.Spend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.RemainingBudget" class="control-label"></label>
                <input asp-for="Budget.RemainingBudget" class="form-control" />
                <span asp-validation-for="Budget.RemainingBudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.Date" class="control-label"></label>
                <input asp-for="Budget.Date" class="form-control" />
                <span asp-validation-for="Budget.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
