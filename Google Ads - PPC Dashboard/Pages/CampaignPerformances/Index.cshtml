@page
@model Google_Ads___PPC_Dashboard.Pages.CampaignPerformances.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].Campaign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].Impressions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].Clicks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].Conversions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CampaignPerformance[0].ConversionValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CampaignPerformance) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Campaign.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Impressions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clicks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conversions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConversionValue)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
