@model Google_Ads___PPC_Dashboard.Pages.Ads.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].GoogleAdId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].AdGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].AdType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].HeadlinePart1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].HeadlinePart2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].Description1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].FinalUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad[0].UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ad) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoogleAdId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdGroup.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadlinePart1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeadlinePart2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
